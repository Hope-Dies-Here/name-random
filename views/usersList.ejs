<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Users List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: ;
            background-color: #f0f0f0;
        }
        .container {
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ddd;
        }
        h1 {
            color: #333;
        }
        .conyainer ul {
            list-style-type: none;
            padding: 0;
        }
        .container ul li {
            padding: 10px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .container li:last-child {
            border-bottom: none;
        }
        .container .btn {
            padding: 5px 10px;
            margin-left: 5px;
            cursor: pointer;
        }
        .delete-btn {
            background-color: #ff9999;
            border: 1px solid #ff6666;
        }
        .update-btn {
            background-color: #99ccff;
            border: 1px solid #66a3ff;
        }
    </style>
    <link href="/adminHeader.css" rel="stylesheet" />
</head>
<body>
   <%- include("./partials/adminHeader.ejs") -%>
    <div class="container">
       
        <h1>Users List</h1>
        
        <ul id="usersList">
          <% users.forEach(user => { %>
            <li>
               <%= user.name %>
                <div>
                    <button class="btn update-btn" onclick="updateUser('John Doe')">Update</button>
                    <button class="btn delete-btn" onclick="deleteUser('John Doe')">Delete</button>
                </div>
            </li>
          <% }) %>
           
        </ul>
    </div>

    <script>
        function deleteUser(name) {
            alert("Delete " + name + " (This is just a simulation)");
        }

        function updateUser(name) {
            alert("Update " + name + " (This is just a simulation)");
        }
    </script>
</body>
</html>