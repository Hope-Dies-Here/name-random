<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/header.css" type="text/css" media="all" />
    <link rel="stylesheet" href="/profile.css" type="text/css" media="all" />
  </head>
  <body>
    <%- include("./partials/header.ejs") -%>
    <main class="container">
      <div class="top">
      <div class="profile-header">
        <img
          src="/img/17004.png"
          alt="<%=user.name%>"
          class="profile-avatar"
        />
        <div class="profile-info">
          <h1 class="profile-name"><%=user.name%></h1>
          <p class="profile-username">@<%=user.username%></p>
          <!-- <div class="profile-bio-wrapper">
            <p class="profile-bio">
              Passionate developer | AI enthusiast | Open source contributor
            </p> 
          </div> -->
          <div class="profile-details">
            <span class="profile-detail">
              <svg class="icon" viewBox="0 0 16 16">
                <path
                  d="M2 2.5A2.5 2.5 0 014.5 0h8.75a.75.75 0 01.75.75v12.5a.75.75 0 01-.75.75h-2.5a.75.75 0 110-1.5h1.75v-2h-8a1 1 0 00-.714 1.7.75.75 0 01-1.072 1.05A2.495 2.495 0 012 11.5v-9zm10.5-1V9h-8c-.356 0-.694.074-1 .208V2.5a1 1 0 011-1h8zM5 12.25v3.25a.25.25 0 00.4.2l1.45-1.087a.25.25 0 01.3 0L8.6 15.7a.25.25 0 00.4-.2v-3.25a.25.25 0 00-.25-.25h-3.5a.25.25 0 00-.25.25z"
                ></path>
              </svg>
              <span><%=completedChallenges.length%> Challenges</span>
            </span>
            <span class="profile-detail">
              <img src="/img/premium-badge-svgrepo-com.svg" alt="B" class="badge-icon icon" />
              <span><%=user.badge%></span>
            </span>
            <span class="profile-detail">
              <img src="/img/premium-badge-svgrepo-com.svg" alt="B" class="badge-icon icon" />
              <span>0 Experiance Point</span>
            </span>
            <span class="profile-detail">
              <svg class="icon" viewBox="0 0 16 16">
                <path
                  d="M7.775 3.275a.75.75 0 001.06 1.06l1.25-1.25a2 2 0 112.83 2.83l-2.5 2.5a2 2 0 01-2.83 0 .75.75 0 00-1.06 1.06 3.5 3.5 0 004.95 0l2.5-2.5a3.5 3.5 0 00-4.95-4.95l-1.25 1.25zm-4.69 9.64a2 2 0 010-2.83l2.5-2.5a2 2 0 012.83 0 .75.75 0 001.06-1.06 3.5 3.5 0 00-4.95 0l-2.5 2.5a3.5 3.5 0 004.95 4.95l1.25-1.25a.75.75 0 00-1.06-1.06l-1.25 1.25a2 2 0 01-2.83 0z"
                ></path>
              </svg>
              <a
                href="<%=user.githubLink%>"
                target="_blank"
                rel="noopener noreferrer"
                >Profile</a
              >
            </span>
          </div>
        </div>
      </div>
      <div class="achievements-cont">
        <h2 class="section-title">Achievements</h2>
        <div class="achievements">
        <div class="achievement">
          <div class="achievement-icon">üèÜ</div>
        </div>
      </div>
      </div>
</div>

      <h2 class="section-title">Submitted Challenges</h2>
      <div class="challenge-grid">
      <% completedChallenges.forEach(challenge => { %>
        <div class="challenge-item">
          <div class="challenge-title">
            <%=challenge.challenge.name%>
          <div>
          <div class="challenge-description">
            <%=challenge.description%>
          </div>
          <div class="challenge-meta">
            <span>Completed on <%=challenge.uploadedDate.toString().split(' ').slice(0, 4).join(' ')%> </span>
            <span class="badge"><%=challenge.challenge.level%></span>
          </div>
        </div>
      <% }) %>
        
      </div>
    </main>

    <%- include("./partials/footer.ejs") -%>
  </body>
</html>
